{% extends 'base.html.twig' %}
{% block body %}
    {% for message in app.flashes('notice') %}
   <div class="alert alert-success">
    {{ message }}
   </div>
    {% endfor %}

   <div class="container mt-5 mb-5">
    <h2 class="page-header mb-5"> Latest events </h2>
    <div class="row" style="margin: 0 auto;">
    {% for event in events %}
        <div class="card p-0 me-4 mb-3" style="width: 18rem;">
        <img src="{{event.image}}" class="card-img-top" alt="{{event.image}}">
        <div class="card-body">
        <p class="card-text">{{event.name}}</p>
        <p class="card-text">{{event.time|date()}}</p>
        <p class="card-text">{{event.description}}</p>
        <p class="card-text">{{event.capacity}}</p>
        <p class="card-text">Contact us:</p>
        <p class="card-text">{{event.email}}</p>
        <p class="card-text">{{event.phone}}</p>
        <p class="card-text">{{event.address}}</p>
        <p class="card-text"><a href="{{event.url}}">Website</a></p>
        </div>
        <div class="card-footer">
        <a href="/details/{{event.id}}" class="btn btn-success">Details</a>     
        <a href="/edit/{{event.id}}" class="btn btn-default">Edit</a>
        <a href="/delete/{{event.id}}" class="btn btn-danger">Delete</a>
        </div>
        </div>
    {% endfor %}
    </div>
</div>
{% endblock %}