{% extends 'base.html.twig' %}
{% block title %}Details of event{% endblock %}
{% block body %}
<div class="container">
<div class="row" style="margin: 0 auto;">
   <div class="card p-0 mt-5 mb-5" style="width: 30rem; margin: 0 auto;">
        <img src="{{events.image}}" class="card-img-top" alt="{{events.image}}">
        <div class="card-body">
        <p class="card-text">{{events.name}}</p>
        <p class="card-text">{{events.time|date()}}</p>
        <p class="card-text">{{events.description}}</p>
        <p class="card-text">{{events.capacity}}</p>
        <p class="card-text">Contact us:</p>
        <p class="card-text">{{events.email}}</p>
        <p class="card-text">{{events.phone}}</p>
        <p class="card-text">{{events.address}}</p>
        <p class="card-text"><a href="{{events.url}}">Website</a></p>
        </div>
        <div class="card-footer">
        <a class="btn btn-success" href="/">Back</a>
        </div>
    </div>
</div>
</div>
{% endblock %}